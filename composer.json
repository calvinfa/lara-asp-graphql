{
  "name": "calvinfa/lara-asp-graphql",
  "homepage": "https://github.com/calvinfa/lara-asp",
  "description": "The Awesome Set of Packages for Laravel - The GraphQL Extensions.",
  "readme": "README.md",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "laravel-package",
    "laravel",
    "GraphQL",
    "lighthouse-php",
    "php"
  ],
  "require": {
    "php": ">=7.4.1",
    "ext-mbstring": "*",
    "laravel/framework": "^7.0",
    "nuwave/lighthouse": "^5.4",
    "calvinfa/lara-asp-core": "self.version",
    "phpdocumentor/reflection-docblock": "^5.2"
  },
  "require-dev": {
    "ext-pdo_sqlite": "*",
    "mockery/mockery": "^1.4",
    "phpunit/phpunit": "^9.5.0",
    "orchestra/testbench": "^6.9.0"
  },
  "suggest": {
    "ext-fileinfo": "Required for league/flysystem"
  },
  "autoload": {
    "psr-4": {
      "LastDragon_ru\\LaraASP\\GraphQL\\": "src/"
    },
    "exclude-from-classmap": [
      "src/**Test.php"
    ]
  },
  "extra": {
    "laravel": {
      "providers": [
        "LastDragon_ru\\LaraASP\\GraphQL\\Provider"
      ]
    }
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  }
}
